<?php if($errors->all()): ?>
    <ul class="list-unstyled">
        <?php foreach($errors->all() as $error): ?>
            <li class="alert alert-warning"><button type="button" class="close pull-right" data-dismiss="alert">&times;</button><?php echo e($error); ?></li>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>
<?php if(Session::get('success') || Session::get('error') || Session::get('status')): ?>
    <ul class="list-unstyled">
        <?php if(Session::get('success')): ?>
            <li class="alert alert-success"><?php echo e(Session::get('success')); ?> <button type="button" class="close" data-dismiss="alert">&times;</button></li>
        <?php elseif(Session::get('error')): ?>
            <li class="alert alert-danger"><?php echo e(Session::get('error')); ?> <button type="button" class="close" data-dismiss="alert">&times;</button></li>
        <?php elseif(Session::get('status')): ?>
            <li class="alert alert-info"><?php echo e(Session::get('status')); ?> <button type="button" class="close" data-dismiss="alert">&times;</button></li>
        <?php endif; ?>
    </ul>
<?php endif; ?>